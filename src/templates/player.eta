<!DOCTYPE html>
<html>
<head>
    <title>HLS Video Player</title>
    <script type="module" src="https://cdn.jsdelivr.net/npm/media-chrome@1/+esm"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/hls-video-element@1.2/+esm"></script>
    <style>
        body {
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: #f0f0f0;
        }
        media-player {
            width: 100%;
            max-width: 960px;
            aspect-ratio: 16 / 9;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
          console.log('hi')
            const video = document.querySelector('hls-video');
            const player = document.querySelector('media-player');

            // Log video events
            ['loadstart', 'loadedmetadata', 'canplay', 'playing', 'error'].forEach(eventName => {
                video.addEventListener(eventName, (e) => {
                    console.log(`Video event: ${eventName}`, e);
                });
            });

            // Log video errors
            video.addEventListener('error', (e) => {
                console.error('Video error:', {
                    error: video.error,
                    networkState: video.networkState,
                    readyState: video.readyState,
                    currentSrc: video.currentSrc
                });
            });

            // Log when source changes
            const observer = new MutationObserver((mutations) => {
                mutations.forEach((mutation) => {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'src') {
                        console.log('Source changed:', video.src);
                    }
                });
            });
            observer.observe(video, { attributes: true });

            console.log('Initial video source:', video.src);
        });
    </script>
</head>
<body>
    <media-player>
        <hls-video
            src="<%= it.videoSrc %>"
            crossorigin
            slot="media"
        ></hls-video>

        <media-loading-indicator slot="centered-chrome" noautohide></media-loading-indicator>
        <media-control-bar>
            <media-play-button></media-play-button>
            <media-seek-backward-button></media-seek-backward-button>
            <media-seek-forward-button ></media-seek-forward-button>
            <media-mute-button></media-mute-button>
            <media-volume-range></media-volume-range>
            <media-time-range></media-time-range>
            <media-time-display showduration remaining></media-time-display>
            <media-playback-rate-button></media-playback-rate-button>
            <media-fullscreen-button></media-fullscreen-button>
        </media-control-bar>
    </media-player>
</body>
</html>
